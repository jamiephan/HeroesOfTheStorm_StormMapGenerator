  {
    "name": "Rehgar with AoE Lightning Shield lv20 Talent",
    "author": null,
    "content": [
      "<!-- Implement the AoE Rehgar Lightning Shield to Allies Like Storm Shield -->",
      "<!-- So instead of Storm Shield applies a generic shield to allies nearby -->",
      "<!-- It applies a talented/untalented Lightning Shield (W). -->",
      "<!-- This will be an extra level 20 talent. -->",
      "",
      "<!-- Match with Rehgar W-->",
      "<const id=\"$RehgarAoELightningShieldRange\" value=\"8.25\" />",
      "<const id=\"$RehgarAoELightningShieldCooldown\" value=\"75\" />",
      "<const id=\"$RehgarAoELightningShieldButtonFace\" value=\"RehgarLightningShield\" />",
      "<!-- For Effect, use \"RehgarAoELightningShieldTalented\" for talented and \"RehgarAoELightningShieldUntalented\" for untalented -->",
      "<!-- so use either -->",
      "<const id=\"$RehgarAoELightningShieldEffect\" value=\"RehgarAoELightningShieldTalented\" />",
      "<!-- or -->",
      "<!-- <const id=\"$RehgarAoELightningShieldEffect\" value=\"RehgarAoELightningShieldUntalented\" /> -->",
      "",
      "<CBehaviorAbility id=\"AoELightningShieldItem\">",
      "    <Buttons Face=\"$RehgarAoELightningShieldButtonFace\" Type=\"AbilCmd\" AbilCmd=\"AoELightningShield,Execute\" />",
      "</CBehaviorAbility>",
      "",
      "<CAbilEffectInstant id=\"AoELightningShield\">",
      "    <Effect value=\"AoELightningShieldSearch\" />",
      "    <Flags index=\"NoDeceleration\" value=\"1\" />",
      "    <Cost>",
      "      <Cooldown TimeUse=\"$RehgarAoELightningShieldCooldown\" />",
      "  </Cost>",
      "    <CmdButtonArray index=\"Execute\" DefaultButtonFace=\"$RehgarAoELightningShieldButtonFace\" />",
      "</CAbilEffectInstant>",
      "",
      "<CEffectEnumArea id=\"AoELightningShieldSearch\">",
      "    <SearchFilters value=\"Heroic;Neutral,Enemy,ImmuneToFriendlyAbilities,Dead\" />",
      "    <AreaArray Radius=\"$RehgarAoELightningShieldRange\" Effect=\"$RehgarAoELightningShieldEffect\" />",
      "</CEffectEnumArea>",
      "",
      "<CEffectSet id=\"RehgarAoELightningShieldTalented\">",
      "    <EffectArray value=\"RehgarLightningShieldInitialSet\" />",
      "</CEffectSet>",
      "",
      "<CEffectApplyBehavior id=\"RehgarAoELightningShieldUntalented\">",
      "    <ValidatorArray index=\"0\" removed=\"1\" />",
      "    <Behavior value=\"RehgarLightningShieldLightningBondBuffUntalented\" />",
      "</CEffectApplyBehavior>",
      "",
      "<CActorRange id=\"AoELightningShieldRange\" parent=\"StormRangeAbilPlusSplat\" abil=\"AoELightningShield\" />",
      "<CActorSplat id=\"AoELightningShieldRangeSplat\" parent=\"StormRangeSplat\">",
      "    <Scale value=\"$RehgarAoELightningShieldRange\" />",
      "</CActorSplat>",
      "",
      "<CHero id=\"Rehgar\">",
      "    <TalentTreeArray Talent=\"RehgarAoELightningShield\" Tier=\"7\" Column=\"5\" />",
      "</CHero>",
      "",
      "<CTalent id=\"RehgarAoELightningShield\">",
      "    <Face value=\"$RehgarAoELightningShieldButtonFace\" />",
      "    <Abil value=\"AoELightningShield\" />",
      "    <RankArray>",
      "      <BehaviorArray value=\"AoELightningShieldItem\" />",
      "  </RankArray>",
      "    <Active value=\"1\" />",
      "</CTalent>"
    ]
  },
  {
    "name": "Every Hero with a Permanent -9999 armor",
    "author": null,
    "content": [
      "<!-- This constant allows you to set any armor value you like -->",
      "<!-- Based on testing, the valid armor values are  -->",
      "<!-- From minimum -524288 to 100 maximum  -->",
      "<const id=\"$CustomArmorValue\" value=\"-9999\" />",
      "",
      "<!-- The Behavior that applies the custom armor -->",
      "<!-- Because it have OverrideMinCap and OverrideMaxCap  -->",
      "<!-- It can by pass the -25 to 75 armor cap -->",
      "<CBehaviorBuff id=\"PermaCustomArmor\" parent=\"StormArmor\">",
      "<!-- Value read from the constant above -->",
      "<ArmorModification AllArmorBonus=\"$CustomArmorValue\">",
      "  <!-- Armor for each type of unit attributes -->",
      "  <ArmorSet index=\"Hero\">",
      "    <OverrideMinCap index=\"Splash\" value=\"1\" />",
      "    <OverrideMaxCap index=\"Splash\" value=\"1\" />",
      "    <OverrideMinCap index=\"Basic\" value=\"1\" />",
      "    <OverrideMaxCap index=\"Basic\" value=\"1\" />",
      "      <OverrideMinCap index=\"Ability\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Ability\" value=\"1\" />",
      "    </ArmorSet>",
      "    <ArmorSet index=\"Merc\">",
      "      <OverrideMinCap index=\"Splash\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Splash\" value=\"1\" />",
      "      <OverrideMinCap index=\"Basic\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Basic\" value=\"1\" />",
      "      <OverrideMinCap index=\"Ability\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Ability\" value=\"1\" />",
      "    </ArmorSet>",
      "    <ArmorSet index=\"Monster\">",
      "      <OverrideMinCap index=\"Splash\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Splash\" value=\"1\" />",
      "      <OverrideMinCap index=\"Basic\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Basic\" value=\"1\" />",
      "      <OverrideMinCap index=\"Ability\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Ability\" value=\"1\" />",
      "    </ArmorSet>",
      "    <ArmorSet index=\"Summon\">",
      "      <OverrideMinCap index=\"Splash\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Splash\" value=\"1\" />",
      "      <OverrideMinCap index=\"Basic\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Basic\" value=\"1\" />",
      "      <OverrideMinCap index=\"Ability\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Ability\" value=\"1\" />",
      "    </ArmorSet>",
      "    <ArmorSet index=\"Structure\">",
      "      <OverrideMinCap index=\"Splash\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Splash\" value=\"1\" />",
      "      <OverrideMinCap index=\"Basic\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Basic\" value=\"1\" />",
      "      <OverrideMinCap index=\"Ability\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Ability\" value=\"1\" />",
      "    </ArmorSet>",
      "    <ArmorSet index=\"Minion\">",
      "      <OverrideMinCap index=\"Splash\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Splash\" value=\"1\" />",
      "      <OverrideMinCap index=\"Basic\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Basic\" value=\"1\" />",
      "      <OverrideMinCap index=\"Ability\" value=\"1\" />",
      "      <OverrideMaxCap index=\"Ability\" value=\"1\" />",
      "    </ArmorSet>",
      "  </ArmorModification>",
      "</CBehaviorBuff>",
      "",
      "<!-- Normally, if we want to apply this behavior to all heroes -->",
      "<!-- We need to manually add it to all ther heroes individually -->",
      "<!-- e.g: -->",
      "<!-- <CUnit id=\"HeroAlarak\"> -->",
      "<!--   <BehaviorArray Link=\"PermaCustomArmor\" /> -->",
      "<!-- </CUnit> -->",
      "<!-- (You cannot mod the parent, e.g StormHeroMounted, because it inherited before you change it ) -->",
      "",
      "<!-- However it will make this example too long -->",
      "<!-- Instead, we can do some trick to bypass this issue -->",
      "<!-- We know that Mounted heroes like Ana was interited from StormHeroMounted  -->",
      "<!-- and custom mount heroes like Falstad was inherited from StormHeroMountedCustom -->",
      "<!-- Both StormHeroMounted and StormHeroMountedCustom share the same parent: StormHero  -->",
      "",
      "<!-- We can then use one of the behaviors that it has with the minimal impact, e.g no validators, duration, effects -->",
      "<!-- This allows changing the behavior and inject our custom behavior to all heroes -->",
      "<!-- As all heroes were inherited from here -->",
      "",
      "<!-- The one I chosen with the minimal impact is \"EndOfMatchAwardsHeroGenericLowHealthMonitor\" -->",
      "<!-- EndOfMatchAwardsHeroGenericLowHealthMonitor does not have a InitialEffect  -->",
      "<!-- and convinently with a Permanent flag -->",
      "<!-- Hence we can inject our custom Effect to the InitialEffect -->",
      "<!-- Without affecting the original functionality -->",
      "<!-- (You can't apply a behavior within a behavior, hence you need a \"middle-man/proxy\" CEffectApplyBehavior) -->",
      "<CBehaviorBuff id=\"EndOfMatchAwardsHeroGenericLowHealthMonitor\">",
      "  <!-- Tells that when the hero was loaded, apply out custom proxy PermaCustomArmorApplyBehavior effect-->",
      "  <InitialEffect value=\"PermaCustomArmorApplyBehavior\" />",
      "</CBehaviorBuff>",
      "  ",
      "<!-- This proxy effect will simply applies our PermaCustomArmor behavior -->",
      "<CEffectApplyBehavior id=\"PermaCustomArmorApplyBehavior\">",
      "  <Behavior value=\"PermaCustomArmor\"/>",
      "</CEffectApplyBehavior>"
    ]
  },
  {
    "name": "Dehaka with Spawn Brush ability",
    "author": "KurumiStella",
    "content": [
      "<!-- Constants -->",
      "<const id=\"$DehakaSpawnBrushAbilityCooldown\" value=\"60\" />",
      "<const id=\"$DehakaSpawnBrushUnitTimedLife\" value=\"15\" />",
      "<const id=\"$DehakaSpawnBrushUnitSightRadius\" value=\"10\" />",
      "",
      "<!-- Add the Ability to Dehaka -->",
      "<CUnit id=\"HeroDehaka\">",
      "  <BehaviorArray Link=\"DehakaSpawnBrushItem\" />",
      "</CUnit>",
      "",
      "<!-- Create a Button face -->  ",
      "<CButton id=\"DehakaSpawnBrushAbility\" parent=\"StormButtonParent\">",
      "  <Icon value=\"Assets\\Textures\\storm_ui_icon_dehaka_brushstalker_a.dds\"/>",
      "</CButton>",
      "",
      "<!-- Map the ability to a Behavior Item, so can be used on active hotbar -->",
      "<CBehaviorAbility id=\"DehakaSpawnBrushItem\">",
      "  <Buttons Face=\"DehakaSpawnBrushAbility\" Type=\"AbilCmd\" AbilCmd=\"DehakaSpawnBrush,Execute\" />",
      "</CBehaviorAbility>",
      "",
      "<!-- The Spawn Brush Ability -->",
      "<CAbilEffectTarget id=\"DehakaSpawnBrush\">",
      "  <AbilityCategories index=\"Control\" value=\"1\" />",
      "  <PrepEffect value=\"DismountDecloakCasterSet\" />",
      "  <Effect value=\"DehakaSpawnBrushInitialSet\" />",
      "  <Flags index=\"ClearLastMoveTarget\" value=\"1\" />",
      "  <Flags index=\"RequireTargetVision\" value=\"0\" />",
      "  <Cost>",
      "    <Cooldown TimeUse=\"$DehakaSpawnBrushAbilityCooldown\" />",
      "  </Cost>",
      "  <Range value=\"500\" />",
      "  <Arc value=\"360\" />",
      "  <CastIntroTime value=\"0\" />",
      "  <CastOutroTime value=\"0.25\" />",
      "  <PlaceUnit value=\"DehakaSpawnBrushUnit\" />",
      "  <CmdButtonArray index=\"Execute\" DefaultButtonFace=\"DehakaSpawnBrushAbility\" />",
      "</CAbilEffectTarget>",
      "",
      "<!-- When the Button was pressed -->",
      "<CEffectSet id=\"DehakaSpawnBrushInitialSet\">",
      "  <EffectArray value=\"DehakaSpawnBrushInitialPersistent\" />",
      "  <TargetLocationType value=\"Point\" />",
      "  <ValidatorArray value=\"TargetLocationIsPathable\" />",
      "  <ValidatorArray value=\"TargetPointWalkable\" />",
      "</CEffectSet>",
      "",
      "  <!-- Do something on the point -->",
      "  <CEffectCreatePersistent id=\"DehakaSpawnBrushInitialPersistent\">",
      "    <ExpireEffect value=\"DehakaSpawnBrushCreateUnit\" />",
      "    <RevealRadius value=\"1.5\" />",
      "    <RevealFlags index=\"Unfog\" value=\"1\" />",
      "  </CEffectCreatePersistent>",
      "",
      "<!-- Create the DehakaSpawnBrushUnit Unit-->",
      "<CEffectCreateUnit id=\"DehakaSpawnBrushCreateUnit\">",
      "  <WhichLocation Value=\"TargetPoint\" />",
      "  <SpawnUnit value=\"DehakaSpawnBrushUnit\" />",
      "  <SpawnEffect value=\"DehakaSpawnBrushUnitSpawnSet\" />",
      "</CEffectCreateUnit>",
      "",
      "<!-- Add some effect to the unit -->",
      "<CEffectSet id=\"DehakaSpawnBrushUnitSpawnSet\">",
      "  <EffectArray value=\"DehakaSpawnBrushUnitApplyTimedLifeBehavior\" />",
      "</CEffectSet>",
      "",
      "<!-- Add a timed life behavior -->",
      "<CEffectApplyBehavior id=\"DehakaSpawnBrushUnitApplyTimedLifeBehavior\">",
      "  <Behavior value=\"DehakaSpawnBrushUnitTimedLife\" />",
      "</CEffectApplyBehavior>",
      "",
      "<!-- The Time life Behavior -->",
      "<CBehaviorBuff id=\"DehakaSpawnBrushUnitTimedLife\" parent=\"StormTimedLife\">",
      "  <DisplayDuration index=\"Enemy\" value=\"0\" />",
      "  <DisplayDuration index=\"Neutral\" value=\"0\" />",
      "  <DisplayDuration index=\"Ally\" value=\"1\" />",
      "  <Duration value=\"$DehakaSpawnBrushUnitTimedLife\" />",
      "</CBehaviorBuff>",
      "",
      "",
      "<!-- DehakaSpawnBrushUnit Unit -->",
      "",
      "<!-- Instead of directly spawning Storm_KingsCrest_Shrubbery -->",
      "<!-- Need to do some workaround wrapper for to insert -->",
      "<!-- \"CustomUnitStatusFrame\" into the brush unit -->",
      "<!-- So that it can display a duration bar -->",
      "",
      "<CUnit id=\"DehakaSpawnBrushUnit\" parent=\"Storm_KingsCrest_Shrubbery\">",
      "  <!-- Unselectable some-how make the duration bar not visible -->",
      "  <FlagArray index=\"Unselectable\" value=\"0\" />",
      "  <Sight value=\"$DehakaSpawnBrushUnitSightRadius\" />",
      "</CUnit>",
      "",
      "<CActorUnit id=\"DehakaSpawnBrushUnit\" parent=\"StormUnitBase\" unitName=\"DehakaSpawnBrushUnit\">",
      "  <!-- Copied From <CActorUnit id=\"Storm_KingsCrest_Shrubbery\" /> -->",
      "  <!-- Apparently you cannot parent a <CActorUnit> with a unitName in it-->",
      "  <VisibleOpacity value=\"0.500000\" />",
      "  <VisibleOpacityBlendDuration value=\"0.250000\" />",
      "  <SnapshotActor value=\"SnapshotNoOpacity\" />",
      "  <HighlightTooltip value=\"Unit/Name/Bogus\" />",
      "  <!-- A little minimap icon -->",
      "  <MinimapIconScale value=\"1.000000\" />",
      "  <!-- Add the Unit frame to display the duration -->",
      "  <CustomUnitStatusFrame value=\"UnitStatus/IndestructibleTimedUnitStatusFrameTemplate\" />",
      "</CActorUnit>",
      "",
      "<CModel id=\"DehakaSpawnBrushUnit\" parent=\"Storm_KingsCrest_Shrubbery\" />"
    ]
  }
]